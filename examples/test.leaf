#set("content") {
  <h1>#(title)</h1>

  #if(someVar) {
    <div class="foo">
      Hello, world!
    </div>
  }

  #for(foo in foos) {
    <p>#(foo.bar)</p>
  }

  #if(1 + 2 == 3) { Magnifique! }

  #if(someString = "YOLO!") {
    <b>#(someString)</b>
  }
}

<div class="foo" id="foo">
  Raw HTML here.
</div>

<script type="text/javascript">
  document.getElementById("foo").innerHTML = "Hello JavaScript!";
</script>

<style>
  body {background-color: powderblue;}
  h1   {color: blue;}
  p    {color: red;}
</style>

#embed("base")
